# OpenClaw Clawdbot Development Profile
# Safe-by-default configuration that cannot touch prod secrets or real accounts
# This profile is designed to prevent accidental side effects during development

# Environment mode
CLAWDBOT_ENV=development

# Safety flags
CLAWDBOT_SAFE_MODE=true
CLAWDBOT_ALLOW_EXTERNAL_SEND=false
CLAWDBOT_ALLOW_EXTERNAL_CALLS=false
CLAWDBOT_ALLOW_PAYMENTS=false

# Secrets and credentials
CLAWDBOT_SECRETS_SCOPE=dev-only

# Service behaviors
CLAWDBOT_N8N_DRY_RUN=true
CLAWDBOT_LOG_LEVEL=debug

# Additional safety defaults
CLAWDBOT_ENABLE_TELEMETRY=false
CLAWDBOT_ENABLE_CRASH_REPORTING=false
CLAWDBOT_MAX_WORKERS=2

# Gateway settings for local development
CLAWDBOT_GATEWAY_MODE=local
CLAWDBOT_GATEWAY_PORT=18789

# Development API endpoints (use mock/staging services)
CLAWDBOT_API_BASE_URL=http://localhost:3000

# Disable production features by default
CLAWDBOT_ENABLE_PROD_CHANNELS=false
CLAWDBOT_ENABLE_REAL_TIME_SYNC=false
