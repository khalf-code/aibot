{
  "name": "@openclaw/core-memories",
  "version": "1.0.0",
  "description": "Hierarchical memory system for OpenClaw agents with progressive compression and event-driven retrieval",
  "keywords": [
    "agent",
    "ai",
    "compression",
    "hierarchical-memory",
    "memory",
    "openclaw"
  ],
  "license": "MIT",
  "author": "OpenClaw Contributors <contributors@openclaw.org>",
  "contributors": [
    "OpenClaw Community"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openclaw/openclaw.git",
    "directory": "packages/core-memories"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./integration": {
      "types": "./dist/integration.d.ts",
      "import": "./dist/integration.js"
    }
  },
  "scripts": {
    "build": "tsc && node ./scripts/rewrite-dist-imports.mjs",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "lint": "oxlint --type-aware --tsconfig tsconfig.json",
    "lint:fix": "oxlint --type-aware --tsconfig tsconfig.json --fix",
    "postinstall": "pnpm -s build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "openclaw": ">=2026.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
