{
  "version": "1.0",
  "description": "Secret scanning configuration for OpenClaw repository",
  "patterns": [
    {
      "name": "AWS Access Key ID",
      "pattern": "AKIA[0-9A-Z]{16}",
      "severity": "critical"
    },
    {
      "name": "AWS Secret Access Key",
      "pattern": "aws_secret_access_key\\s*=\\s*[A-Za-z0-9/+=]{40}",
      "severity": "critical"
    },
    {
      "name": "Private Key (RSA/DSA/EC)",
      "pattern": "-----BEGIN\\s*(RSA|DSA|EC)?\\s*PRIVATE\\s*KEY",
      "severity": "critical"
    },
    {
      "name": "GitHub Token",
      "pattern": "ghp_[A-Za-z0-9_]{36}|github_pat_[A-Za-z0-9_]{22}",
      "severity": "critical"
    },
    {
      "name": "Discord Bot Token",
      "pattern": "[MN][A-Za-z0-9_-]{23}\\.[A-Za-z0-9_-]{6}\\.[A-Za-z0-9_-]{27}",
      "severity": "critical"
    },
    {
      "name": "Slack Token",
      "pattern": "xox[baprs]-[0-9]{10,13}-[0-9]{10,13}[a-zA-Z0-9-]*",
      "severity": "critical"
    },
    {
      "name": "API Key Generic",
      "pattern": "api[_-]?key['\"]?\\s*[:=]\\s*['\"]?[A-Za-z0-9_-]{32,}['\"]?",
      "severity": "high",
      "case_sensitive": false
    },
    {
      "name": "Password Assignment",
      "pattern": "password['\"]?\\s*[:=]\\s*['\"]?[^\\s'\"]{8,}['\"]?",
      "severity": "high",
      "case_sensitive": false
    },
    {
      "name": "Database Connection String",
      "pattern": "(mongodb|mysql|postgresql|redis)://[^\\s]+:[^\\s]+@",
      "severity": "critical",
      "case_sensitive": false
    },
    {
      "name": "OAuth Token",
      "pattern": "oauth[_-]?token['\"]?\\s*[:=]\\s*['\"]?[A-Za-z0-9._-]{20,}['\"]?",
      "severity": "high",
      "case_sensitive": false
    },
    {
      "name": "JWT Token",
      "pattern": "eyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+",
      "severity": "high"
    },
    {
      "name": "Telegram Bot Token",
      "pattern": "[0-9]+:AA[A-Za-z0-9_-]{25,}",
      "severity": "high"
    },
    {
      "name": "Stripe API Key",
      "pattern": "(sk|pk)_(test|live)_[A-Za-z0-9]{20,}",
      "severity": "critical"
    },
    {
      "name": "Azure Connection String",
      "pattern": "DefaultEndpointsProtocol=https?;AccountName=[^;]+;AccountKey=[^;]+",
      "severity": "critical"
    },
    {
      "name": "Google API Key",
      "pattern": "AIza[0-9A-Za-z\\-_]{35}",
      "severity": "high"
    }
  ],
  "excluded_files": [
    ".secrets.baseline",
    ".secretscanrc",
    "package-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock",
    "node_modules/",
    "dist/",
    ".git/",
    ".env.example",
    ".env.sample",
    "CHANGELOG.md",
    "docs/"
  ],
  "allowed_patterns": [
    "example",
    "test",
    "fake",
    "dummy",
    "placeholder"
  ]
}
