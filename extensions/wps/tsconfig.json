{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "clawdbot/plugin-sdk": ["../../src/plugin-sdk/index.ts"]
    }
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
