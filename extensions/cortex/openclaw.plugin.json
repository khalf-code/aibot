{
  "id": "cortex",
  "kind": "memory",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable Cortex memory enhancements"
      },
      "autoCapture": {
        "type": "boolean",
        "default": true,
        "description": "Automatically capture important conversation moments"
      },
      "stmFastPath": {
        "type": "boolean",
        "default": true,
        "description": "Check STM before full memory search (fast path)"
      },
      "temporalRerank": {
        "type": "boolean",
        "default": true,
        "description": "Re-rank search results by recency"
      },
      "temporalWeight": {
        "type": "number",
        "default": 0.4,
        "minimum": 0,
        "maximum": 1,
        "description": "Weight for temporal/recency scoring (0-1)"
      },
      "importanceWeight": {
        "type": "number",
        "default": 0.3,
        "minimum": 0,
        "maximum": 1,
        "description": "Weight for importance scoring (0-1)"
      },
      "stmCapacity": {
        "type": "integer",
        "default": 50000,
        "minimum": 5,
        "maximum": 100000,
        "description": "Maximum items in short-term memory (Phase 1: 50K default)"
      },
      "embeddingsUrl": {
        "type": "string",
        "default": "http://localhost:8030",
        "description": "GPU embeddings daemon URL for memory index"
      },
      "activeSessionCapacity": {
        "type": "integer",
        "default": 50,
        "minimum": 10,
        "maximum": 500,
        "description": "Messages to keep in active session RAM cache"
      }
    }
  }
}
